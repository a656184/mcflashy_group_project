
<% all_rounds = Round.pluck(:id) %>
<% all_users = Round.pluck(:user_id) %>
<% round_user = Hash[all_rounds.zip(all_users)] %>

<% round_user.each do |round, user| %>

<% true_guesses = Attempt.where(outcome: true).find_all_by_round_id(round).count %>
<% total_guesses = Attempt.find_all_by_round_id(round).count %>

<%= User.where(id: user).pluck(:email) %> got <%= true_guesses %> right out of <%= total_guesses %> for <%= (true_guesses.to_f/total_guesses) %>%. 

<% end %>

<form class="logout" action="/sign_out" align="right" method="get">
  <input type="submit" value="Log Out">
</form>
